<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="HRPU" transaction-type="JTA">
        <jta-data-source>fooDS</jta-data-source>
        <class>pl.gov.mofnet.giif.rekrutacja.hr.model.Country</class>
        <class>pl.gov.mofnet.giif.rekrutacja.hr.model.Department</class>
        <class>pl.gov.mofnet.giif.rekrutacja.hr.model.Employee</class>
        <class>pl.gov.mofnet.giif.rekrutacja.hr.model.Job</class>
        <class>pl.gov.mofnet.giif.rekrutacja.hr.model.Location</class>
        <class>pl.gov.mofnet.giif.rekrutacja.hr.model.Region</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="eclipselink.logging.logger" value="JavaLogger"/>
            <property name="javax.persistence.schema-generation.database.action" value="create"/>
            <property name="javax.persistence.schema-generation.create-source" value="script"/>
            <property name="javax.persistence.schema-generation.create-script-source" value="create.sql"/>
        </properties>
    </persistence-unit>
</persistence>
